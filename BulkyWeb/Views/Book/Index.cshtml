@model List<Book>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primate"> Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create">
                <i class="bi bi-bookmark-plus-fill"></i>Create New Book
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">

        <thead >
            <tr>
               <th>Title</th>
               <th>Author</th>
               <th>Price</th>
               <th>DisplayOrder</th>
               <th>Category</th>
               <th>Operations</th>
            </tr>
        </thead>

        <tbody>
           @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Author</td>
                    <td>@obj.Price</td>
                    <td>@obj.Category.DisplayOrder</td>
                    <td>@obj.Category.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-fill"></i></a>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-secondary"><i class="bi bi-list-task"></i></a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>


</div>

@section{
    @{
        
    }

}